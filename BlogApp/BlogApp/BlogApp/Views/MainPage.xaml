<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="BlogApp.Views.MainPage"
             Title="BlogApp">

    
    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
        <Button Text="Form" TextColor="White" BackgroundColor="ForestGreen"  Command="{Binding FormCommand}"/>
        <Button Text="Avatars" TextColor="White" BackgroundColor="DodgerBlue" Command="{Binding AvatarsCommand}"/>
        <Button Text="Expand and collapse" TextColor="White" BackgroundColor="Coral" Command="{Binding ExpandAndCollapseCommand}"/>
    </StackLayout>

</ContentPage>